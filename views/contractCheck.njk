{% include "./partials/header.njk" -%}
{% include "./partials/nav.njk" %}
<!-- Page Content -->
<div class="page-content {{ "active" if userProfile.settings.smSideNav == true }}">
<div class="page-header">
    <div class="container-fluid">
    <h2 class="h5 no-margin-bottom">Contract check</h2>
    </div>
</div>
<section class="no-padding-top padding-bottom noselect">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="statistic-block block">
					<span>{{ error if error }}</span>
					<span class='refresh'>Next refresh: </span><span id='refresh_time' class='refresh'></span>

                    <table id="example" class="table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>contractId</th>
                                <th>date_issued</th>
                                <th>Issuer</th>
								<th>Assignee</th>
								<th>Ship</th>
                                <th>price</th>
								<th>status</th>
								<th>type</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for row in data %}
                            <tr>
                                <td>{{ row.contractId }}</td>
                                <td>{{ row.dateIssuedStr }}</td>
                                <td>{{ row.issuer }}</td>
								<td>{{ row.assignee }}</td>
								<td>{{ row.ships }}</td>
                                <td>{{ row.price }}</td>
                                <td>{{ row.status }}</td>
                                <td>{{ row.type }}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>         
                </div>
            </div>
        </div>
    </div>
</section>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.16/fh-3.1.3/datatables.min.css"/>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.16/fh-3.1.3/datatables.min.js"></script>
<style>
	.refresh{
		display: inline !important;
	}
</style>
<script>
$(document).ready(function() {
    $('#example').DataTable({
        "paging":   false,
        "ordering": false
    });

	refresh_time_s = {{ other.refreshMS }};
	refresh_time = $('#refresh_time');

	setInterval(function(){
		refresh_time_s -= 1000;
		if(refresh_time_s < 0){
			refresh_time_s= 0;
			refresh_time.text('ready');
		}else{
			time = msToTime(refresh_time_s);
			refresh_time.text(time);
		}
	}, 1000);
	
})


function msToTime(s) {
			var ms = s % 1000;
			s = (s - ms) / 1000;
			var secs = s % 60;
			s = (s - secs) / 60;
			var mins = s % 60;

			if(mins && secs <10) secs = '0'+secs;
			return mins + ':' + secs;
		}
</script>
